<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Records"
    tools:showIn="@layout/app_bar_records">




    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="60dp"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_alignParentLeft="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/fab"
        app:backgroundTint="@color/colorPrimary"
        android:src="@drawable/share"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="70dp"
        app:backgroundTint="#fff"
        android:baselineAlignBottom="true"
        app:srcCompat="@drawable/add"
        />






    <android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:layout_alignParentStart="true"
    app:cardBackgroundColor="#e91e63"
    android:id="@+id/one"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_alignParentTop="true" >


    <TextView
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Allergies" />


</android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="65dp"

        app:cardBackgroundColor="#ffff"
        android:id="@+id/one2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/textView10"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Peanuts, Pollen, Sulphur compounds " />
    </android.support.v7.widget.CardView>







    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/two"
        android:layout_below="@+id/one2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="#f57f17">

        <TextView
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Clinical Vitals" />

</android.support.v7.widget.CardView>





    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        app:cardBackgroundColor="#ffff"
        android:id="@+id/two2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/two">


        <TextView
            android:id="@+id/textView11"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="190lb, 183cm, 78/123, BMI 23.78" />
    </android.support.v7.widget.CardView>






    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:id="@+id/three"
        android:layout_below="@+id/two2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        app:cardBackgroundColor="#ffc107">

        <TextView
            android:id="@+id/textView9"
            android:textSize="20dp"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Procedures" />


    </android.support.v7.widget.CardView>






    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        app:cardBackgroundColor="#ffff"
        android:id="@+id/three2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/three">




        <TextView
            android:id="@+id/textView13"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Coronary artery bypass surgery" />
    </android.support.v7.widget.CardView>







    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:id="@+id/four"
        android:layout_below="@+id/three2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="#03a9f4">

    <TextView
        android:id="@+id/textView7"
        android:textSize="20dp"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Lab results" />

</android.support.v7.widget.CardView>







    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        app:cardBackgroundColor="#ffff"
        android:id="@+id/four2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/four">



        <TextView
            android:id="@+id/textView15"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="HDL Cholesterol 91.2"/>
    </android.support.v7.widget.CardView>





    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:id="@+id/five"
        android:layout_below="@+id/four2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="#4caf50">
        >

        <TextView
            android:id="@+id/textView8"
            android:textSize="20dp"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Immunizations" />

    </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        app:cardBackgroundColor="#ffff"
        android:id="@+id/five2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/five">





        <TextView
            android:id="@+id/textView16"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Influenza, Tetanus, Chicken pox"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>